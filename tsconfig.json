{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2017", "DOM"],
    "outDir": "./dist" ,
    "experimentalDecorators": true
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src/**/*"]
}